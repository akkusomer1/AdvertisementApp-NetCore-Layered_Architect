
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<AdvertisementListDto>


<div class="container-fluid">

    @{
        if (Model?.Count > 0)
        {
            <div class="text-end my-3 p-1">
                <a class="btn btn-success" asp-action="Create" asp-controller="Application">Yeni ilan oluştur</a>

            </div>

            <table class="mt-3 table table-sm table-hover table-striped">
                <thead>
                    <tr>
                        <th>İlan Adı</th>
                        <th>Oluşturulma Tarihi</th>
                        <th>Durumu</th>
                        <th>İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var advertisement in Model)
                    {
                        <tr>
                            <td>@advertisement.Title</td>
                            <td>@advertisement.CreatedDate.ToString("dddd, dd MMMM yyyy")</td>
                            <td>@(advertisement.Status ? "Aktif" : "Pasif")</td>

                            <td>
                                <a class="btn btn-warning" asp-action="Update" asp-controller="Application" asp-route-id="@advertisement.Id">Güncelle</a> |
                                <a class="btn btn-danger" asp-action="Remove" asp-controller="Application" asp-route-id="@advertisement.Id">Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="text-end my-3 p-1">
                <a class="btn btn-success" asp-action="Create" asp-controller="Application">Yeni ilan oluştur</a>

            </div>
            <div class="mt-3 text-center lead">
                Herhangi bir ilan bulunmamaktadır.
            </div>
        }
    }


</div>